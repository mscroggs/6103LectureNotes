\newenvironment{gframed}{%
    \begin{tcolorbox}[width=\textwidth,
        breakable,
        enhanced,
        bottom=1mm,
        boxrule=1pt,
        colframe=white!70!black,
        colback=white
        ]%
}{\end{tcolorbox}}

\newenvironment{themplate}[1]
{\begin{gframed}
\textbf{#1}

}{\end{gframed}}

\newenvironment{in_a_box}
{\begin{gframed}}{\end{gframed}}

\newenvironment{thing}     [1]{\begin{themplate}{#1}}{\end{themplate}}
\newenvironment{example}   [1][]{\begin{themplate}{\ifthenelse{\equal{#1}{}}{Example}{Example: #1}}}  {\end{themplate}}
\newenvironment{exercise}   [1][]{\begin{themplate}{\ifthenelse{\equal{#1}{}}{Exercise}{Exercise: #1}}}  {\end{themplate}}
\newenvironment{examples}  [1][]{\begin{themplate}{\ifthenelse{\equal{#1}{}}{Examples}{Examples: #1}}}{\end{themplate}}
\newenvironment{theorem}   [1][]{\begin{themplate}{\ifthenelse{\equal{#1}{}}{Theorem}{Theorem: #1}}}  {\end{themplate}}
\newenvironment{definition}[1][]{\begin{themplate}{\ifthenelse{\equal{#1}{}}{Definition}{Definition: #1}}}{\end{themplate}}
\newenvironment{lemma}     [1][]{\begin{themplate}{\ifthenelse{\equal{#1}{}}{Lemma}{Lemma: #1}}}      {\end{themplate}}

\renewenvironment{proof}{\begin{themplate}{}\textit{Proof:} }{\begin{flushright}$\square$\end{flushright}\end{themplate}}

